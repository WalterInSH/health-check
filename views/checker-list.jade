extends layout

block content
    table.highlight
        thead
            tr
                th
                th URL
                th 状态
                th
        tbody
        each c in checkers
            tr
                td= c.title
                td= c.url
                td
                    if c.is_healthy
                        i.material-icons.green-text verified_user
                    else
                        i.material-icons.red-text warning

                td
                    a(href='/checker/'+c.id) 执行历史

    .container
        ul.pagination
            li.disabled
                a(href="#!")
                    i.material-icons chevron_left
            li.active.teal.darken-3
                a(href="#!") 1
            li.waves-effect
                a(href="#!") 2
            li.waves-effect
                a(href="#!") 3
            li.waves-effect
                a(href="#!")
                    i.material-icons chevron_right